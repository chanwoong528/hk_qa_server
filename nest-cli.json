{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./env/*.env",
        "outDir": "./dist"
      },
      {
        "include": "mail/templates/**/*.hbs",
        "outDir": "./dist"
      },
      {
        "include": "mail/templates/**/*.tsx",
        "outDir": "./dist"
      }
    ],
    "watchAssets": true
  }
}